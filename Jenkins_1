pipeline {
    agent {label 'you'}
    stages {
        stage('my Build') {
            steps {
                sh "echo ${BUILD_VERSION}"
                sh 'docker build -t tomcat_build:${BUILD_VERSION} --build-arg BUILD_VERSION=${BUILD_VERSION} .'
            }
        }  
        stage('publish stage') {
            steps {
                sh "echo ${BUILD_VERSION}"
                sh 'docker login -u yetish519 -p Yetibond&519'
                sh 'docker tomcat_build:${BUILD_VERSION} yetish519/tomcat_maven:${BUILD_VERSION}'
                sh 'docker push yetish519/tomcat_maven:${BUILD_VERSION}'
            }
        } 
        stage( 'my deploy' ) {
        agent {label 'me'} 
            steps {
               sh 'docker pull yetish519/tomcat_maven:${BUILD_VERSION}'
               sh 'docker rm -f mytomcat'
               sh 'docker run -d -p 8080:8080 --name mytomcat yetish519/tomcat_maven:${BUILD_VERSION}'
            }
        }    
    } 
}
